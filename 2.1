#VARIABLES
orderComplete = False
totalCost = 0
tax = 0.06

#WELCOME THE USER TO THE POINT OF SALE(POS)
print("Welcome to the Browntown Burger Joint, voted 2nd best Burger in Browntown")

#ASK THEM FOR THEIR NAME AND STORE IT IN name
name = input("Can I have your name please?  ")
print("Thanks " + name)

#POINT OF SALE LOOP
while orderComplete == False:
    #STAY IN THIS LOOP UNTIL THEY SELECT "COMPLETE ORDER"
    print ("What would you like to order: Burgers, Sides, Drinks, Complete Order.")
    menu = input("-> ")
    
    if menu == "Burgers":
        #IF THEY WANT TO ADD A BURGER:
        print("We offer the following burgers:")
        print("1: Hamburger $5.50")
        print("2: Cheesebuger $6.00")
        print("3: Western burger (Cheese, onion, western sauce) $6.75")
        print("4; Bubby burger (Plant-based burger with Daniel's secret sauce) $8.00")
        burgerChoice = input("What would you like (input a number 1-4): ")
        #BURGER 1: HAMBURGER
        if burgerChoice == "1":
            totalCost = totalCost + 5.50
            print("You added Hamburger to your order")
            print("Your total cost so far: $", totalCost)

        #BURGER 2: CHEESEBURGER
        elif burgerChoice == "2":
            totalCost = totalCost + 6.00
            print("You added Cheeseburger to your order")
            print("Your total cost so far: $", totalCost)

        #BURGER 3: WESTERN BURGER
        elif burgerChoice == "3":
            totalCost = totalCost+ 6.75
            print("You added Western Burger to your order")
            print("Your total cost so far: $", totalCost)
        
        #BURGER 4: Bubby Burger
        elif burgerChoice == "4":
          totalCost = totalCost + 8.00
          print("You added Bubby Burger to your order")
          print("Your total cost so far: $", totalCost)

        #IF THEY GET HERE, THEY DID NOT MAKE A VALID SELECTION
        else:
            print("Please make a valid choice")
        
    elif menu == "Sides":
        print("sides")
        print("We offer the following sides:")
        print("1: French Fries $3.00")
        print("2: Boneless Wings $5.00")
        print("3: Mozzarella Sticks $4.00")
        side_choice = input("What side would you like? (Input a number from 1-3):")
        
        if side_choice == "1":
          totalCost = totalCost + 3
          print("You added French Fries to your order.")
          print("Your total cost so far: $", totalCost)

        elif side_choice == "2":
          totalCost = totalCost + 5
          print("You added Boneless Wings to your order.")
          print("Your total cost so far: $", totalCost)
          
        elif side_choice == "3":
          totalCost = totalCost + 4
          print("You added Mozzarella Sticks to your order.")
          print("Your total cost so far: $", totalCost)

        else:
          print("Please make a valid choice")
        
    elif menu == "Drinks":
        print("drinks")
        print("We offer the following drinks:")
        print("1: Water $1.00")
        print("2: Bud Light $4.00")
        print("3: Maple Syrup $3.00")
        drink_choice = input("What drink would you like? (Input a number from 1-3):")

        if drink_choice == "1":
          totalCost = totalCost + 1
          print("You added Water to your order.")
          print("Your total cost so far: $", totalCost)
          
        elif drink_choice == "2":
          totalCost = totalCost + 4
          print("You added Bud Light to your order")
          print("Your total cost so far: $", totalCost)
        
        elif drink_choice == "3":
          totalCost = totalCost + 3
          print("You added Maple Syrup to your order")
          print("Your total cost so far; $", totalCost)
   
    elif menu == "Complete Order":
        #IF THEY SELECT COMPLETE ORDER, SET THE ORDERCOMPLETE TO TRUE
        orderComplete = True
        #GIVE THEM THEIR TOTALS
        print("Order finished")
        print(name, " ordered", "Side option", side_choice, "Burger option", burgerChoice, "and Drink option", drink_choice)
        print("Subtotal: $", totalCost)
        totalTax = float(totalCost) * tax
        totalTaxRound = round(totalTax, 2)
        print("Total Tax: $", totalTaxRound)
        Grand_total = totalCost + totalTaxRound
        print("Your grand total is $", Grand_total)
        #Finish this section to give you a grand total as well as print your complete orderTy
        
    else:
        print("Sorry, not a valid choice, please start over...")

