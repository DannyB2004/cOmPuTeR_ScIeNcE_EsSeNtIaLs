import os
fileName = "sign_in.txt"

def writeToFile(content):
  try:
    with open(fileName, "a") as file:
      content = content + "\n"
      file.write(content)
      print("Your name has been added to the sign-in sheet")
      file.close()
  except:
      print("An error has occured!")

def readFromFile():
  try:
        with open(fileName, "r") as file:
            content = file.read()
            print(content)
            file.close()
  except:
      print("Nothing here yet")
  
while True:
    print("Welcome to the sign-in sheet. What would you like to do?")
    print("1: Sign in     2: Read sign in sheet     3: Exit sign in sheet")
    choice = input("-->")
    
    if choice == "1":
      fileExist = True
      print("What is your name?")
      content = input("-->")
      writeToFile(content)
      

    elif choice == "2":
      print("Reading the sign-in sheet")
      readFromFile()

    elif choice == "3":
      
      print("You are now exiting the sign-in sheet")
      if fileExist == True:
        os.remove(fileName)
        break
        print("Thank you!")
      else:
